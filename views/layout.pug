  //- body.hold-transition.sidebar-mini
  //- body.sidebar-mini.sidebar-collapse.layout-fixed.layout-navbar-fixed
  body.sidebar-mini.layout-fixed.layout-navbar-fixed

    .wrapper
      nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
        ul.navbar-nav
          li.nav-item
            a.nav-link(data-widget="pushmenu", href="#", role="button")
              i.fas.fa-bars
      
      aside.main-sidebar.sidebar-dark-primary.elevation-4

        a(href="/mmi-admin-dashboard/").brand-link
          img(src="/admin-lte-3/dist/img/AdminLTELogo.png", alt="AdminLTE Logo", class="brand-image img-circle elevation-3", style="opacity: .8")
          span.brand-text.font-weight-light Admin

        .sidebar

          div(class="user-panel mt-3 pb-3 mb-3 d-flex")
            .image
              img(src=(session.user.acc_first_name+' '+session.user.acc_last_name === "Christian Cervantes") ? "/admin-lte-3/images/dp.jpeg" : "/admin-lte-3/images/unknown.jpg", class="img-circle elevation-2", alt="User Image")
            .info
              if session.user
                a.d-block=session.user.acc_first_name+' '+session.user.acc_last_name

          nav.mt-2
            ul(class="nav nav-pills nav-sidebar flex-column", data-widget="treeview", role="menu", data-accordion="false")
              li(class="nav-item has-treeview")
                a(href="/mmi-admin-dashboard/", class=(path === '/dashboard' ) ? 'nav-link active' : 'nav-link')
                  i.nav-icon.fas.fa-tachometer-alt
                  p Dashboard
              li(class="nav-item has-treeview")
                a(href="/mmi-admin-dashboard/websites", class=(path.search(/websites/g) != -1 || path === '/add-website' ) ? 'nav-link active' : 'nav-link')
                  i.nav-icon.fas.fa-globe
                  p Websites
              li(class="nav-item has-treeview")
                a(href="/mmi-admin-dashboard/articles", class=(path.search(/articles/g) != -1) ? 'nav-link active' : 'nav-link')
                  i.nav-icon.fas.fa-newspaper
                  p Articles
              if session.user.acc_type == 'dev'
                li(class="nav-item has-treeview")
                  a(href="/mmi-admin-dashboard/advance-setting", class=(path.search(/advance/g) != -1 ) ? 'nav-link active' : 'nav-link')
                    i.nav-icon.fas.fa-cog
                    p Advance Setting
              li.nav-item.has-treeview(class=(path.search(/artem/g) != -1 ) ? 'menu-open' : 'nav-item has-treeview')
                a.nav-link(href='#')
                  i.nav-icon.fas.fa-caret-right
                  p
                    | Global Link Dashboard
                    i.right.fas.fa-angle-left
                ul.nav.nav-treeview
                  li.nav-item
                    a.nav-link(href='/mmi-admin-dashboard/artem-link-dashboard', class=(path.search(/artem-link/g) != -1 ) ? 'nav-link active' : 'nav-link')
                      i.far.fa-circle.nav-icon
                      p Link Dashboard
                  li.nav-item
                    a.nav-link(href='/mmi-admin-dashboard/client-link-dashboard', class=(path.search(/client-link/g) != -1 ) ? 'nav-link active' : 'nav-link')
                      i.far.fa-circle.nav-icon
                      p Article Dashboard
                  //- li.nav-item.has-treeview
                  //-   a.nav-link(href='/mmi-admin-dashboard/artem-article-dashboard', class=(path.search(/artem-article/g) != -1 ) ? 'nav-link active' : 'nav-link')
                  //-     i.far.fa-circle.nav-icon
                  //-     p
                  //-       | Article Dashboard

              li(class="nav-item has-treeview")
                a(href="/mmi-admin-dashboard/users/logout").nav-link
                  i.nav-icon.fas.fa-sign-out-alt
                  p Logout
