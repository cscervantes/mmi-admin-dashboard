extends ../../layout

block css

block content
    .row
        .col-sm-12
            .card
                .card-header
                    h3.card-title Global of Articles
                    .card-tools
                        //- button.btn.btn-tool(onclick="location.href='/mmi-admin-dashboard/articles/add'", title="New article")
                        //-     i.fas.fa-book
                        button(type="button", class="btn btn-tool", data-card-widget="maximize")
                            i.fas.fa-expand
                        button(type="button", class="btn btn-tool", data-card-widget="collapse")
                            i.fas.fa-minus
                .card-body
                    .row
                        .col-md-6.col-sm-6.col-12
                            .info-box
                                span.info-box-icon.bg-info
                                    i.fa.fa-book
                                .info-box-content
                                    span.info-box-text Articles Parsed Today
                                    span.info-box-number 0
                        .col-md-6.col-sm-6.col-12
                            .info-box
                                span.info-box-icon.bg-success
                                    i.fa.fa-book
                                .info-box-content
                                    span.info-box-text Articles Date Publish Today
                                    span.info-box-number 0
                    .row
                        .col-md-4
                            .input-group
                                .input-group-prepend
                                    span.input-group-text Search
                                input#keyword.form-control(type="text", name="keyword", placeholder="Keyword")
                        .col-md-2
                            .input-group
                                label(for="field")
                                select#field.form-control(name="field")
                                    option(value="title") Title
                                    option(value="url") Url
                                    option(value="content") Content
                        .col-md-2
                            .input-group
                                label(for="Keyword")
                                input#date_from.form-control(type="date", name="date_from")
                        .col-md-2
                            .input-group
                                label(for="Keyword")
                                input#date_from.form-control(type="date", name="date_from")
                        .col-md-2
                            .input-group
                                button(type="button", class="btn btn-success") Search



block js
    script(src="/admin-lte-3/javascripts/moment.min.js")
    script(src="/admin-lte-3/javascripts/artem/global-article.js")