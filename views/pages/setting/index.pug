extends ../../layout

block content
    .row
        .col-12
            .card
                .card-header
                    h3.card-title=title
                    .card-tools
                        button(type="button", class="btn btn-tool", data-card-widget="maximize")
                            i.fas.fa-expand
                        button(type="button", class="btn btn-tool", data-card-widget="collapse")
                            i.fas.fa-minus
                .card-body(style="background-color:#f4f6f9;")
                    .input-group
                        span.input-group-prepend
                            span.input-group-text.bg-info
                                i.fas.fa-globe
                        input#search(type="search", name="search", class="form-control", placeholder="Search website")
                        span.input-group-append
                            select#request_source.form-control(name="request_source")
                                option(value="request") Request
                                option(value="cloudscraper") Cloud Scraper
                        span.input-group-append
                            button.btn.btn-default.bg-info(id="btnSearch")
                                i.fas.fa-search
                                |  Search
                .card-footer#search-result
                .overlay(style="display:none;")
                    i(class="fas fa-2x fa-sync-alt fa-spin")

block js
  script(src="/admin-lte-3/javascripts/moment.min.js")
  script(src="/admin-lte-3/javascripts/setting/index.js")
  script.
    advanceSearch(moment)