extends ../../layout

block content
  .row
    .col-12
      .card
        .card-header
          h3.card-title List of websites
        .card-body
          table#website-datatable(class="table table-bordered table-hover")
            thead
              tr
                th NAME
                th FQDN
                th CATEGORY
                th TYPE
                th Country
                th STATUS
                th CREATED
    
    .col-12
      button.btn.btn-primary(onclick="location.href='/mmi-admin-dashboard/add-website'")
        span.fas.fa-globe
        |  New

block js
  script(src="/admin-lte-3/javascripts/website/index.js")
